# ==============================================================================
# ПРИМЕР ФАЙЛА КОНФИГУРАЦИИ (.env.example)
# ==============================================================================
# Скопируйте этот файл в .env и заполните значения
# Команда: cp .env.example .env
# ==============================================================================

# Секретный ключ Flask для подписи сессий и cookies
# ВАЖНО: Генерируйте уникальный ключ для каждого проекта!
# Пример генерации: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-change-me

# Режим отладки (True/False)
# ВНИМАНИЕ: В продакшене ОБЯЗАТЕЛЬНО установить False!
FLASK_DEBUG=True

# Хост и порт для запуска сервера
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
